{
	"name": "@draftlab/auth",
	"version": "0.0.2",
	"type": "module",
	"description": "Core implementation for @draftlab/auth",
	"author": "Matheus Pergoli",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		}
	},
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/Draft-Lab/auth.git"
	},
	"bugs": {
		"url": "https://github.com/Draft-Lab/auth/issues"
	},
	"homepage": "https://github.com/Draft-Lab/auth",
	"keywords": [
		"auth",
		"oauth",
		"authentication",
		"draftlab",
		"typescript"
	],
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"deploy": "tsdown && changeset publish",
		"clean": "rm -rf dist .turbo node_modules"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@draftlab/tsconfig": "workspace:*",
		"@types/node": "^24.0.12",
		"tsdown": "^0.12.9",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"@libsql/client": "^0.15.0",
		"unstorage": "^1.0.0"
	},
	"peerDependenciesMeta": {
		"@libsql/client": {
			"optional": true
		},
		"unstorage": {
			"optional": true
		}
	},
	"dependencies": {
		"@draftlab/auth-router": "workspace:*",
		"@standard-schema/spec": "^1.0.0",
		"jose": "^6.0.11"
	},
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	}
}
